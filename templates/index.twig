<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8" />
    <title>Welcome to Craft CMS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover" />
    <meta name="referrer" content="origin-when-cross-origin" />
    {{ craft.vite.script("src/js/app.js") }}
</head>

<body class="flex flex-col gap-4 h-screen items-center justify-center" data-controller="hello">
    Hello world

    {% set svgLabelId = "svg-label-#{random()}" %}

    {{ tag('label', {
        class: "sr-only",
        id: svgLabelId,
        text: "Black square",
    }) }}

    {{ ol([
        tag('img', {
            alt: "Black square",
            class: "w-10",
            src: craft.vite.asset("/images/black-square.svg", true),
        }),
        tag('img', {
            alt: "Black square",
            class: "w-10",
            src: "/dist/images/black-square.svg",
        }),
        svg('@webroot/dist/images/black-square.svg')|attr({
            aria: { labelledby: svgLabelId },
            class: "h-10 w-10",
        }),
        tag('div', {
            class: 'bg-black-square h-10 w-10',
            html: tag('span', {
                class: 'sr-only',
                html: 'Black square',
            }),
        })
    ], {
        class: "list-decimal space-y-4",
        encode: false,
    }) }}
</body>
</html>

